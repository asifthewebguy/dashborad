{
    "name": "dashboard",
    "version": "1.0.0",
    "description": "dashboard project (odin project assignment) ",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
        "nodemon": "nodemon --watch src app.js -e js,html,css",
        "nodemon-tailwind": "npm-run-all --parallel nodemon tailwind",
        "dev": "npm-run-all --parallel start tailwind",
        "all": "npm-run-all --parallel start tailwind nodemon"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/asifthewebguy/dashborad.git"
    },
