    },
    "homepage": "https://github.com/asifthewebguy/dashborad#readme",
    "devDependencies": {
        "connect-livereload": "^0.6.1",
        "livereload": "^0.9.3",
        "npm-run-all": "^4.1.5",
        "tailwindcss": "^3.0.23"
    },
    "dependencies": {
        "express": "^4.17.3",
        "nodemon": "^2.0.15"
    }
